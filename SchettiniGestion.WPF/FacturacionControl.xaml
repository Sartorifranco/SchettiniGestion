<UserControl x:Class="SchettiniGestion.WPF.FacturacionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchettiniGestion.WPF"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="{StaticResource ModuleBackgroundBrush}"
             Loaded="FacturacionControl_Loaded">
    <!-- ¡NUEVO EVENTO! -->

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- ================================== -->
        <!-- COLUMNA 0: DETALLE DE FACTURA      -->
        <!-- ================================== -->
        <DockPanel Grid.Column="0" Margin="10,0,5,10">

            <Border DockPanel.Dock="Top" 
                    Background="{StaticResource PanelBackgroundBrush}" 
                    CornerRadius="5,5,0,0" Margin="10,10,10,0" Padding="15"
                    BorderBrush="{StaticResource BorderDarkBrush}" BorderThickness="1,1,1,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Tipo de Comprobante:" Style="{StaticResource ModuleLabelStyle}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox x:Name="cmbTipoComprobante" Style="{StaticResource ModuleComboBoxStyle}" Width="250" Margin="0">
                        <ComboBoxItem Content="Factura B"/>
                        <ComboBoxItem Content="Factura A"/>
                        <ComboBoxItem Content="Ticket"/>
                        <ComboBoxItem Content="Recibo X"/>
                    </ComboBox>
                </StackPanel>
            </Border>

            <Border Background="{StaticResource PanelBackgroundBrush}" 
                    CornerRadius="0,0,5,5" Margin="10,0,10,10" Padding="5"
                    BorderBrush="{StaticResource BorderDarkBrush}" BorderThickness="1,0,1,1">

                <DataGrid x:Name="dgvFactura" 
                          Style="{StaticResource ModuleDataGridStyle}"
                          AutoGenerateColumns="False" 
                          CanUserSortColumns="False"
                          CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Código" Binding="{Binding Codigo}" Width="Auto" IsReadOnly="True" />
                        <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}" Width="*" IsReadOnly="True" />
                        <DataGridTextColumn Header="Cant." Binding="{Binding Cantidad}" Width="Auto" IsReadOnly="True" />
                        <DataGridTextColumn Header="Precio Unit." Binding="{Binding PrecioUnitario, StringFormat=C2}" Width="Auto" IsReadOnly="True" />
                        <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal, StringFormat=C2}" Width="Auto" IsReadOnly="True" />
                        <DataGridTemplateColumn Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button x:Name="btnEliminarItem" Content="✕" 
                                            Style="{StaticResource DeleteButtonStyle}"
                                            Padding="10,5" MinHeight="0" MinWidth="0"
                                            Click="btnEliminarItem_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </DockPanel>

        <!-- ================================== -->
        <!-- COLUMNA 1: PANEL DE ACCIONES       -->
        <!-- ================================== -->
        <Border Grid.Column="1" Background="{StaticResource PanelBackgroundBrush}" 
                CornerRadius="5" Margin="5,10,10,10" Padding="15"
                BorderBrush="{StaticResource BorderDarkBrush}" BorderThickness="1">

            <DockPanel>

                <StackPanel DockPanel.Dock="Bottom" Margin="0,20,0,0">
                    <Separator Background="#555"/>
                    <TextBlock Text="TOTAL" Foreground="White" FontSize="28" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,10,0,0"/>
                    <TextBlock x:Name="lblTotal" Text="$ 0,00" Foreground="#00BFFF" FontSize="48" FontWeight="Bold" HorizontalAlignment="Right"/>

                    <Button x:Name="btnGuardarFactura" Content="Cobrar / Guardar" 
                            Style="{StaticResource ActionButtonStyle}" 
                            MinHeight="60" FontSize="20" Margin="0,20,0,0"
                            Background="#00A86B" Click="btnGuardarFactura_Click"/>

                    <Button x:Name="btnCancelarFactura" Content="Cancelar" 
                            Style="{StaticResource DeleteButtonStyle}" 
                            MinHeight="44" FontSize="16" Margin="0,10,0,0"
                            Click="btnCancelarFactura_Click"/>
                </StackPanel>

                <StackPanel DockPanel.Dock="Top">

                 
                    <Border Background="{StaticResource ModuleBackgroundBrush}" CornerRadius="3" Padding="10" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="1. Buscar Cliente (por CUIT o Razón Social)" Style="{StaticResource ModuleLabelStyle}" Margin="0,0,0,5"/>

                            <!-- Cambiamos KeyDown por TextChanged y agregamos PreviewKeyDown -->
                            <TextBox x:Name="txtBuscarCliente" Style="{StaticResource ModuleTextBoxStyle}" 
                                     TextChanged="txtBuscarCliente_TextChanged"
                                     PreviewKeyDown="txtBuscar_PreviewKeyDown"
                                     LostFocus="txtBuscar_LostFocus"/>

                            <!-- ¡NUEVO! Popup de sugerencias -->
                            <Popup x:Name="popupCliente" PlacementTarget="{Binding ElementName=txtBuscarCliente}" Placement="Bottom" StaysOpen="False">
                                <Border Background="{StaticResource PanelBackgroundBrush}" BorderBrush="#007ACC" BorderThickness="1" MaxHeight="200">
                                    <ListBox x:Name="lstSugerenciasCliente" 
                                             ItemsSource="{Binding}" 
                                             DisplayMemberPath="RazonSocial" 
                                             MouseUp="lstSugerenciasCliente_MouseUp"
                                             PreviewKeyDown="lstSugerencias_PreviewKeyDown"
                                             Background="{StaticResource PanelBackgroundBrush}"
                                             Foreground="{StaticResource BodyForegroundBrush}"
                                             BorderThickness="0"/>
                                </Border>
                            </Popup>

                            <TextBlock x:Name="lblClienteSeleccionado" Text="Consumidor Final" Foreground="White" FontSize="16" FontWeight="SemiBold" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

               
                    <Border Background="{StaticResource ModuleBackgroundBrush}" CornerRadius="3" Padding="10">
                        <StackPanel>
                            <TextBlock Text="2. Buscar Producto (por Código o Descripción)" Style="{StaticResource ModuleLabelStyle}" Margin="0,0,0,5"/>

                            <!-- Cambiamos KeyDown por TextChanged y agregamos PreviewKeyDown -->
                            <TextBox x:Name="txtBuscarProducto" Style="{StaticResource ModuleTextBoxStyle}" 
                                     TextChanged="txtBuscarProducto_TextChanged"
                                     PreviewKeyDown="txtBuscar_PreviewKeyDown"
                                     LostFocus="txtBuscar_LostFocus"/>

                            <!-- ¡NUEVO! Popup de sugerencias -->
                            <Popup x:Name="popupProducto" PlacementTarget="{Binding ElementName=txtBuscarProducto}" Placement="Bottom" StaysOpen="False">
                                <Border Background="{StaticResource PanelBackgroundBrush}" BorderBrush="#007ACC" BorderThickness="1" MaxHeight="200">
                                    <ListBox x:Name="lstSugerenciasProducto" 
                                             ItemsSource="{Binding}" 
                                             DisplayMemberPath="Descripcion" 
                                             MouseUp="lstSugerenciasProducto_MouseUp"
                                             PreviewKeyDown="lstSugerencias_PreviewKeyDown"
                                             Background="{StaticResource PanelBackgroundBrush}"
                                             Foreground="{StaticResource BodyForegroundBrush}"
                                             BorderThickness="0"/>
                                </Border>
                            </Popup>

                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Cantidad:" Style="{StaticResource ModuleLabelStyle}"/>
                                    <xctk:IntegerUpDown x:Name="numCantidad" Style="{StaticResource ModuleIntegerUpDownStyle}" Value="1" Minimum="1" FormatString="N0"/>
                                </StackPanel>

                                <Button x:Name="btnAgregarProducto" Grid.Column="1" Content="Agregar ➔" 
                                        Style="{StaticResource ActionButtonStyle}" 
                                        VerticalAlignment="Bottom" 
                                        MinHeight="38" Margin="0,5,0,0"
                                        Click="btnAgregarProducto_Click"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                </StackPanel>

            </DockPanel>
        </Border>

    </Grid>
</UserControl>