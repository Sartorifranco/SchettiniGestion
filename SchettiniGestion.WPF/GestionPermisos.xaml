<UserControl x:Class="SchettiniGestion.WPF.GestionPermisos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchettiniGestion.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="{StaticResource ModuleBackgroundBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Gestión de Roles y Permisos" Grid.Row="0" FontSize="24" FontWeight="Bold" Foreground="{StaticResource HeaderForegroundBrush}" Margin="0,0,0,20"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="{StaticResource PanelBackgroundBrush}" CornerRadius="5" Padding="10" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Roles del Sistema" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource HeaderForegroundBrush}" Margin="0,0,0,10"/>

                    <ListBox x:Name="RolesListBox" 
                             Background="Transparent" 
                             BorderThickness="0" 
                             Foreground="{StaticResource BodyForegroundBrush}"
                             FontSize="16"
                             SelectionChanged="RolesListBox_SelectionChanged">
                    </ListBox>

                </StackPanel>
            </Border>

            <Border Grid.Column="1" Background="{StaticResource PanelBackgroundBrush}" CornerRadius="5" Padding="20" Margin="10,0,0,0">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Permisos Asignados" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource HeaderForegroundBrush}" Margin="0,0,0,10"/>

                    <TextBlock Grid.Row="1" Text="Seleccione un rol para ver/editar sus permisos." 
                               FontSize="14" 
                               Foreground="{StaticResource BodyForegroundBrush}" 
                               Margin="0,0,0,15" 
                               x:Name="PermisosHelpText"/>

                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="PermisosStackPanel" Visibility="Collapsed">
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <Button x:Name="GuardarButton" 
                Content="Guardar Cambios" 
                Grid.Row="2" 
                Style="{StaticResource ActionButtonStyle}" 
                HorizontalAlignment="Right" 
                Margin="0,20,0,0"
                IsEnabled="False"
                Click="GuardarButton_Click"/>
    </Grid>
</UserControl>