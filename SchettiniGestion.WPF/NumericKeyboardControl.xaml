<UserControl x:Class="SchettiniGestion.WPF.NumericKeyboardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="250"
             Background="Transparent">

    <Grid x:Name="keyboardGrid" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button Content="7" Grid.Row="0" Grid.Column="0" Style="{StaticResource KeyboardButtonStyle}" Click="KeyboardButton_Click"/>
        <Button Content="8" Grid.Row="0" Grid.Column="1" Style="{StaticResource KeyboardButtonStyle}" Click="KeyboardButton_Click"/>
        <Button Content="9" Grid.Row="0" Grid.Column="2" Style="{StaticResource KeyboardButtonStyle}" Click="KeyboardButton_Click"/>

        <Button Content="4" Grid.Row="1" Grid.Column="0" Style="{StaticResource KeyboardButtonStyle}" Click="KeyboardButton_Click"/>
        <Button Content="5" Grid.Row="1" Grid.Column="1" Style="{StaticResource KeyboardButtonStyle}" Click="KeyboardButton_Click"/>
        <Button Content="6" Grid.Row="1" Grid.Column="2" Style="{StaticResource KeyboardButtonStyle}" Click="KeyboardButton_Click"/>

        <Button Content="1" Grid.Row="2" Grid.Column="0" Style="{StaticResource KeyboardButtonStyle}" Click="KeyboardButton_Click"/>
        <Button Content="2" Grid.Row="2" Grid.Column="1" Style="{StaticResource KeyboardButtonStyle}" Click="KeyboardButton_Click"/>
        <Button Content="3" Grid.Row="2" Grid.Column="2" Style="{StaticResource KeyboardButtonStyle}" Click="KeyboardButton_Click"/>

        <Button Content="." Grid.Row="3" Grid.Column="0" Style="{StaticResource KeyboardButtonStyle}" Click="KeyboardButton_Click"/>
        <Button Content="0" Grid.Row="3" Grid.Column="1" Style="{StaticResource KeyboardButtonStyle}" Click="KeyboardButton_Click"/>
        <Button Content="⬅" Grid.Row="3" Grid.Column="2" Style="{StaticResource KeyboardButtonStyle}" Click="BackspaceButton_Click"/>

        <Button Content="Enter" Grid.Row="4" Grid.ColumnSpan="3" Style="{StaticResource KeyboardButtonStyle}" Click="EnterButton_Click"/>
    </Grid>
</UserControl>