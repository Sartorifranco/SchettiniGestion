<UserControl x:Class="SchettiniGestion.WPF.PreciosControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchettiniGestion.WPF"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="{StaticResource ModuleBackgroundBrush}"
             Loaded="PreciosControl_Loaded">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Gestión de Precios" FontSize="28" FontWeight="Bold" Foreground="{StaticResource HeaderForegroundBrush}" Margin="0,0,0,25" HorizontalAlignment="Center"/>

        <Border Grid.Row="1" Background="{StaticResource PanelBackgroundBrush}" CornerRadius="5" Padding="20" MinWidth="600">
            <StackPanel>
                <TextBlock Text="Buscar Producto (Código o Nombre)" Style="{StaticResource ModuleLabelStyle}"/>

                <TextBox x:Name="txtBuscarProducto" Style="{StaticResource ModuleTextBoxStyle}" 
                         KeyDown="txtBuscarProducto_KeyDown"
                         LostFocus="txtBuscarProducto_LostFocus"
                         GotFocus="NumericInput_GotFocus"/>

                <Popup x:Name="popupProducto" PlacementTarget="{Binding ElementName=txtBuscarProducto}" Placement="Bottom" StaysOpen="False" AllowsTransparency="True">
                    <Border Background="{StaticResource PanelBackgroundBrush}" BorderBrush="{StaticResource BorderDarkBrush}" BorderThickness="1" CornerRadius="3" MinWidth="500">
                        <ListBox x:Name="lstSugerenciasProducto" MaxHeight="300" 
                                 KeyDown="lstSugerencias_PreviewKeyDown"
                                 MouseUp="lstSugerenciasProducto_MouseUp">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Descripcion}" Foreground="White" FontSize="14"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>
                </Popup>
            </StackPanel>
        </Border>

        <Grid Grid.Row="2" Margin="0,20,0,0" MaxWidth="1200">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <Border x:Name="panelPrecios" Grid.Column="0" Background="{StaticResource PanelBackgroundBrush}" CornerRadius="5" Padding="25" IsEnabled="False" Margin="0,0,20,0" VerticalAlignment="Top">
                <StackPanel>
                    <TextBlock x:Name="lblProductoSeleccionado" Text="Seleccione un producto..." FontSize="20" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,20" TextWrapping="Wrap"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,15,0">
                            <TextBlock Text="Precio de Costo:" Style="{StaticResource ModuleLabelStyle}"/>
                            <xctk:DecimalUpDown x:Name="numPrecioCosto" Style="{StaticResource ModuleNumericUpDownStyle}" FormatString="C2" Margin="0,0,0,20"
                                                GotFocus="NumericInput_GotFocus"/>

                            <TextBlock Text="Precio de Venta:" Style="{StaticResource ModuleLabelStyle}"/>
                            <xctk:DecimalUpDown x:Name="numPrecioVenta" Style="{StaticResource ModuleNumericUpDownStyle}" FormatString="C2"
                                                GotFocus="NumericInput_GotFocus"/>
                        </StackPanel>

                        <Border Grid.Column="1" Background="{StaticResource ModuleBackgroundBrush}" CornerRadius="5" Padding="15" Margin="15,0,0,0">
                            <StackPanel>
                                <TextBlock Text="Cálculo por Ganancia (%):" Style="{StaticResource ModuleLabelStyle}"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <xctk:DecimalUpDown x:Name="numPorcentaje" Style="{StaticResource ModuleNumericUpDownStyle}" Minimum="0"
                                                        GotFocus="NumericInput_GotFocus"/>

                                    <Button x:Name="btnAplicarPorcentaje" Grid.Column="1" Content="Aplicar" 
                                            Style="{StaticResource ActionButtonStyle}" Margin="10,0,0,0"
                                            Click="btnAplicarPorcentaje_Click"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <Button x:Name="btnGuardarPrecios" Content="Guardar Cambios de Precio" 
                            Style="{StaticResource ActionButtonStyle}" 
                            HorizontalAlignment="Right" FontSize="16" 
                            Padding="15,10" Margin="0,30,0,0"
                            Click="btnGuardarPrecios_Click"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Background="{StaticResource PanelBackgroundBrush}" CornerRadius="5" Padding="20" VerticalAlignment="Top" HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Teclado Numérico" FontSize="20" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,20" HorizontalAlignment="Center"/>
                    <local:NumericKeyboardControl x:Name="numericKeyboard" KeyPressed="OnNumericKeyPressed"/>
                </StackPanel>
            </Border>
        </Grid>

    </Grid>
</UserControl>