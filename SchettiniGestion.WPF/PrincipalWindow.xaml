<Window x:Class="SchettiniGestion.WPF.PrincipalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchettiniGestion.WPF"
        mc:Ignorable="d"
        Title="SchettiniGestion" Height="720" Width="1280"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing"
        Background="#F0F0F0">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Columna 0: Barra Lateral -->
        <Border Grid.Column="0" Background="#2E333A" RenderTransformOrigin="0.509,0.498">
            <StackPanel Width="220">

                <TextBlock Text="SCHETTINI GESTIÓN" 
                           Foreground="White" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Margin="0,20,0,20"/>

                <Separator Background="#444"/>

                <Button x:Name="btnInicio" Content="🏠  Inicio" Style="{StaticResource MenuButton}" Click="btnInicio_Click"/>
                <Button x:Name="btnFacturacion" Content="🛒  Facturación" Style="{StaticResource MenuButton}" Click="btnFacturacion_Click"/>
                <TextBlock Text="Reportes" Style="{StaticResource MenuHeader}"/>
                <Button x:Name="btnVentas" Content="📈  Ventas" Style="{StaticResource MenuButton}" Click="btnVentas_Click"/>

                <TextBlock Text="Gestión" Style="{StaticResource MenuHeader}"/>
                <!-- ¡INICIO DE CÓDIGO NUEVO! -->
                <Button x:Name="btnStock" Content="📊  Stock" Style="{StaticResource MenuButton}" Click="btnStock_Click"/>
                <!-- ¡FIN DE CÓDIGO NUEVO! -->
                <Button x:Name="btnProductos" Content="📦  Productos" Style="{StaticResource MenuButton}" Click="productosMenuItem_Click"/>
                <Button x:Name="btnClientes" Content="👥  Clientes" Style="{StaticResource MenuButton}" Click="clientesMenuItem_Click"/>

                <TextBlock Text="Administración" Style="{StaticResource MenuHeader}"/>
                <Button x:Name="btnUsuarios" Content="👤  Usuarios" Style="{StaticResource MenuButton}" Click="usuariosMenuItem_Click"/>

                <Button x:Name="btnSalir" Content="🚪  Salir" Margin="0,50,0,20" Click="salirMenuItem_Click">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource MenuButton}">
                            <Setter Property="Background" Value="#B90202"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#8F0000"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>

        <!-- Columna 1: Área de Contenido -->
        <DockPanel Grid.Column="1" Background="{StaticResource ModuleBackgroundBrush}">

            <!-- Barra de estado con Teclado -->
            <StatusBar DockPanel.Dock="Bottom" Background="#EEEEEE" MinHeight="30">
                <StatusBar.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                        </Grid>
                    </ItemsPanelTemplate>
                </StatusBar.ItemsPanel>

                <StatusBarItem Grid.Column="1" HorizontalAlignment="Right">
                    <Button x:Name="btnTeclado" 
                            Content="⌨️  Abrir Teclado" 
                            MinHeight="26"
                            MinWidth="120"
                            Margin="0,0,10,0"
                            Click="btnTeclado_Click"/>
                </StatusBarItem>
            </StatusBar>

            <!-- Contenido Principal -->
            <ContentControl x:Name="mainContentArea">
                <TextBlock Text="¡Bienvenido a SchettiniGestion!"
                           FontSize="48"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="{StaticResource BodyForegroundBrush}"/>
            </ContentControl>

        </DockPanel>
    </Grid>
</Window>