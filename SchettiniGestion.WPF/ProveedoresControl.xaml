<UserControl x:Class="SchettiniGestion.WPF.ProveedoresControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchettiniGestion.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="{StaticResource ModuleBackgroundBrush}"
             Loaded="ProveedoresControl_Loaded">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Gestión de Proveedores" FontSize="24" FontWeight="Bold" Foreground="{StaticResource HeaderForegroundBrush}" Margin="0,0,0,20"/>

        <Border Grid.Row="1" Background="{StaticResource PanelBackgroundBrush}" CornerRadius="5" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="CUIT:" Style="{StaticResource ModuleLabelStyle}"/>
                    <TextBox x:Name="txtCuit" Style="{StaticResource ModuleTextBoxStyle}" Margin="0,0,0,10"/>

                    <TextBlock Text="Razón Social:" Style="{StaticResource ModuleLabelStyle}"/>
                    <TextBox x:Name="txtRazonSocial" Style="{StaticResource ModuleTextBoxStyle}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="10,0,10,0">
                    <TextBlock Text="Teléfono:" Style="{StaticResource ModuleLabelStyle}"/>
                    <TextBox x:Name="txtTelefono" Style="{StaticResource ModuleTextBoxStyle}" Margin="0,0,0,10"/>

                    <TextBlock Text="Email:" Style="{StaticResource ModuleLabelStyle}"/>
                    <TextBox x:Name="txtEmail" Style="{StaticResource ModuleTextBoxStyle}"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="10,0,0,0">
                    <TextBlock Text="Dirección:" Style="{StaticResource ModuleLabelStyle}"/>
                    <TextBox x:Name="txtDireccion" Style="{StaticResource ModuleTextBoxStyle}"/>
                </StackPanel>

                <StackPanel Grid.Column="3" VerticalAlignment="Bottom" Margin="20,0,0,0">
                    <Button x:Name="btnNuevo" Content="➕ Nuevo" Style="{StaticResource ActionButtonStyle}" Click="btnNuevo_Click" Margin="0,0,0,5"/>
                    <Button x:Name="btnGuardar" Content="💾 Guardar" Style="{StaticResource ActionButtonStyle}" Click="btnGuardar_Click" Margin="0,0,0,5"/>
                    <Button x:Name="btnEliminar" Content="❌ Eliminar" Style="{StaticResource DeleteButtonStyle}" Click="btnEliminar_Click" IsEnabled="False"/>
                </StackPanel>
            </Grid>
        </Border>

        <DataGrid x:Name="dgvProveedores" Grid.Row="2" 
                  Style="{StaticResource ModuleDataGridStyle}" 
                  Margin="0,20,0,0"
                  AutoGenerateColumns="False" 
                  SelectionChanged="dgvProveedores_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ProveedorID}" Width="60" IsReadOnly="True"/>
                <DataGridTextColumn Header="CUIT" Binding="{Binding CUIT}" Width="150" IsReadOnly="True"/>
                <DataGridTextColumn Header="Razón Social" Binding="{Binding RazonSocial}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Teléfono" Binding="{Binding Telefono}" Width="150" IsReadOnly="True"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="180" IsReadOnly="True"/>
                <DataGridTextColumn Header="Dirección" Binding="{Binding Direccion}" Width="200" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>