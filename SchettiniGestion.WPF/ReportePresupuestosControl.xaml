<UserControl x:Class="SchettiniGestion.WPF.ReportePresupuestosControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchettiniGestion.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000"
             Background="{StaticResource ModuleBackgroundBrush}"
             Loaded="UserControl_Loaded">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Historial de Presupuestos" FontSize="24" FontWeight="Bold" Foreground="{StaticResource HeaderForegroundBrush}" Margin="0,0,0,20"/>

        <Border Grid.Row="1" Background="{StaticResource PanelBackgroundBrush}" CornerRadius="5" Padding="15" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Desde:" Style="{StaticResource ModuleLabelStyle}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <DatePicker x:Name="dpDesde" Width="120" VerticalContentAlignment="Center"/>

                <TextBlock Text="Hasta:" Style="{StaticResource ModuleLabelStyle}" VerticalAlignment="Center" Margin="20,0,10,0"/>
                <DatePicker x:Name="dpHasta" Width="120" VerticalContentAlignment="Center"/>

                <Button x:Name="btnBuscar" Content="🔍 Buscar" Style="{StaticResource ActionButtonStyle}" Width="120" Margin="30,0,0,0" Click="btnBuscar_Click"/>
            </StackPanel>
        </Border>

        <DataGrid x:Name="dgvPresupuestos" Grid.Row="2" 
                  Style="{StaticResource ModuleDataGridStyle}" 
                  AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionChanged="dgvPresupuestos_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nro" Binding="{Binding PresupuestoID}" Width="60"/>
                <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha}" Width="150"/>
                <DataGridTextColumn Header="Cliente" Binding="{Binding RazonSocial}" Width="*"/>
                <DataGridTextColumn Header="Estado" Binding="{Binding Estado}" Width="100"/>
                <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat=C2}" Width="120" FontWeight="Bold"/>
            </DataGrid.Columns>
        </DataGrid>

        <GridSplitter Grid.Row="3" HorizontalAlignment="Stretch" Background="{StaticResource BorderDarkBrush}"/>

        <DockPanel Grid.Row="4" Margin="0,10,0,0">
            <TextBlock DockPanel.Dock="Top" Text="Detalle del Presupuesto Seleccionado" Style="{StaticResource ModuleLabelStyle}" Margin="0,0,0,5"/>
            <DataGrid x:Name="dgvDetalle" 
                      Style="{StaticResource ModuleDataGridStyle}" 
                      AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Código" Binding="{Binding Codigo}" Width="100"/>
                    <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}" Width="*"/>
                    <DataGridTextColumn Header="Cant." Binding="{Binding Cantidad}" Width="80"/>
                    <DataGridTextColumn Header="Precio Unit." Binding="{Binding PrecioUnitario, StringFormat=C2}" Width="100"/>
                    <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal, StringFormat=C2}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="btnEliminar" Content="🗑 Eliminar" Style="{StaticResource DeleteButtonStyle}" Margin="0,0,10,0" Click="btnEliminar_Click"/>
            <Button x:Name="btnImprimir" Content="🖨 Imprimir / PDF" Style="{StaticResource ActionButtonStyle}" Click="btnImprimir_Click"/>
        </StackPanel>

    </Grid>
</UserControl>